<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BarcodeScanning.Test.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BarcodeScanning.Test"
    Shell.FlyoutBehavior="Disabled"
    Title="BarcodeScanning.Test">
    
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Scan"
            ContentTemplate="{DataTemplate local:ScanTab}"
            Route="ScanTab" />
    </TabBar>

</Shell>
